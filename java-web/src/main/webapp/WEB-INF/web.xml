<?xml version="1.0" encoding="UTF-8"?>
<!--
  
-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">

<!-- 리스너 배치 -->
<listener>
    <listener-class>step3.Listener02</listener-class>
</listener>



<!-- 필터 등록하기 -->
<filter>
    <filter-name>Filter02</filter-name>
    <filter-class>step3.Filter02</filter-class>
</filter>

<filter-mapping>
    <filter-name>Filter02</filter-name>
    <url-pattern>/step3/*</url-pattern>
</filter-mapping>


 <!-- 배포할 서블릿 정보를 등록한다 -->
<servlet>
    <servlet-name>Servlet03</servlet-name>
   
    <!-- 패키지 이름을 포함한 FQname 으로 클래스명을 설정한다. -->
    <servlet-class>step1.Servlet03</servlet-class>
    
</servlet>
  
  <!-- 서블릿과 URL을 연결해야 한다 -->
  <servlet-mapping>
    <!-- 위에서 지정한 서블릿 이름 -->
    <servlet-name>Servlet03</servlet-name>
    <url-pattern>/step1/Servlet03</url-pattern>
  </servlet-mapping>
  
  
</web-app>
